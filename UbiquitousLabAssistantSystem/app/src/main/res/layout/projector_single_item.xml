<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_projector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="10dp"
        card_view:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlProjector"
            android:background="@color/dark_white">

            <ImageView
                android:id="@+id/ivProjector"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/arrow_up_selected"/>

            <TextView
                android:id="@+id/tvProjector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/ivProjector"
                android:layout_alignLeft="@+id/ivProjector"
                android:layout_alignRight="@+id/ivProjector"
                android:layout_alignStart="@+id/ivProjector"
                android:layout_below="@+id/ivProjector"
                android:layout_marginTop="8dp"
                android:text="Up"
                android:textAlignment="center"
                android:textColor="@color/album_title"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>